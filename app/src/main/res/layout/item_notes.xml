<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#707070"
        android:layout_margin="10dp">


        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:id="@+id/viewPriority"
            android:background="@drawable/red"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:id="@+id/notesTitle"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:maxLines="1"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notesSubTitle"
                android:text="vfvf vfv cxv dfvdf gdf vdf vdfv fdv dfv df vdf vdf vdf vdf vdf vdf vdf vdf v fdv dfv dfv dfv fdv fdv "
                android:textColor="#D8D8D8"
                android:layout_marginTop="5dp"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="30 Sep 2024"
                android:id="@+id/notesDate"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="16sp"/>



        </LinearLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>